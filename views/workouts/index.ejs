<%- include('../partials/header') %>

<body>
    <h2>All Workouts</h2>

        <% if (user) { %>
          <a href="/workouts/new">Add Workout</a>
          <a href="/athletes/new">Add Athlete</a>
          <a href="/athletes/">View All Athletes</a>
        <% } else { %>
          <p>You must be logged in to add a workout.</p>
        <% } %>

        <table id="list">
            <thead>
              <tr>
                <th>Date</th>
                <th>Upper</th>
                <th>Lower</th>
                <th>Conditioning</th>
              </tr>
            </thead>
            <tbody>
              <% workouts.forEach(function(w) { %>
                <tr>
                  <td><%= w.date %></td>
                  <td><%= w.upper %></td>
                  <td><%= w.lower %></td>
                  <td><%= w.conditioning %></td>
                  <td><a href="/workouts/<%= w._id %>">See details</a></td>
                </tr>
                <% }); %>
              </tbody>
            
            </table>


</body>
</html>